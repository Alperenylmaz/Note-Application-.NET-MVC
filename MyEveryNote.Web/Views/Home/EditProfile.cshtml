@using MyEveryNote.Entity
@using MyEveryNote.BusinessLayer
@model EveryNoteUser

@{
    ViewBag.Title = "Edit Profile";
}
<link href="~/Content/profile_page.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<style>
    .validation-summary-errors {
        margin-top:-60px;
        margin-bottom : 15px;
        margin-left : 105px;
    }
</style>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container emp-profile">
   
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="~/Images/@Model.ProfileImageFileName" alt="" />
                        @Html.HiddenFor(model => model.ProfileImageFileName)
                        <div class="file btn btn-lg btn-primary">
                            Change Photo
                            <input type="file" name="ProfileImage" id="ProfileImage"  />
                        </div>
                        <p>Lütfen png veya jpg formatı kullanın.</p>

                    </div>
                </div>
                <div class="col-md-6" style="margin-top:35px">
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Username, new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <input type="submit" name="name" value="Save" style="margin:5px; width:120px; text-decoration:none;" class="btn btn-secondary"/>
                    <br />
                    @Html.ActionLink("İptal", "ShownProfile","Home",new { @class= "btn btn-danger" , style="margin:5px; width:120px; text-decoration:none;"})

                    
                </div>
            </div>
        }


        <div class="row">
            <div class="col-md-4">

            </div>

        </div>
   
</div>

