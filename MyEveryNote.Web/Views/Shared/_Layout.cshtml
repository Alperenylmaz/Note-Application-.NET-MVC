@using MyEveryNote.Entity
@using MyEveryNote.Web.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>My Every Note</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="" href="#">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />

    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>


</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">My Every Note</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav">
                    @if (CurrentSession.User != null)
                    {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-wrench"></i> Yönetim
                            </a>
                            <div class="dropdown-menu" style="margin-top:7px;" aria-labelledby="navbarDropdown">
                               
                                @DefaultBootstrap.LinkMenu("/Note/Create", "Not Ekle")
                                <div class="dropdown-divider"></div>
                                @DefaultBootstrap.LinkMenu("/Note/Index", "Notlarım")
                                @DefaultBootstrap.LinkMenu("/Note/MyLikedNotes", "Beğendiklerim")

                                @if (CurrentSession.User.IsAdmin)
                                {
                                    <div class="dropdown-divider"></div>
                                    @DefaultBootstrap.LinkMenu("/Note/AddCategory", "Kategori Ekle")
                                    @DefaultBootstrap.LinkMenu("/Category/Index", "Kategoriler")
                                    <div class="dropdown-divider"></div>
                                    @DefaultBootstrap.LinkMenu("/EverynoteUser/Create", "Kullanıcı Ekle")
                                    @DefaultBootstrap.LinkMenu("/EverynoteUser/Index", "Kullanıcılar")
                                }
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked"><i class="bi bi-bookmark-heart"></i> En Beğenilenler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index"><i class="bi bi-award"></i> Son Yazılar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About"><i class="bi bi-info-circle"></i> Hakkımızda</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    @if (CurrentSession.User == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login"><i class="bi bi-chevron-right"></i> Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Register"><i class="bi bi-person-plus-fill"></i> Üye Ol</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @CurrentSession.User.Username
                            </a>
                            <div class="dropdown-menu" style="margin-top:7px;" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Home/ShownProfile">Profili Göster</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Home/EditProfile">Profili Düzenle</a>
                                <a class="dropdown-item" href="/Home/RemoveProfile">Profili Sil</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Logout"><i class="bi bi-x-circle"></i> Çıkış Yap</a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    @RenderBody()

    @RenderSection("footer", required: false)


</body>
</html>